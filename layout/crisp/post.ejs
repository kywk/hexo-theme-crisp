
<% permalink = config.url + config.root + post.path %>
<main id="content">
  <article class="post tag-strategy">
    <div class="post-stamp"><%- date(post.date, null) %><span class="taglist"><% if (post.tags && post.tags.length){ %> on <% post.tags.forEach(function(tag) { %><a href='<%= config.root + tag.path %>' style='margin:0 5px;'><%- tag.name %></a><% }); %><% } %></span></div>
    <h1 class="post-title"><%- post.title %></h1>
    <%- post.content %>
    <!-- TODO: Social Share -->
  </article>

  <% if(config.disqus_shortname) { %>
  <div id="comment">
    <div id="disqus_thread">
      <noscript>Please enable JavaScript to view the <a href="//disqus.com/?ref_noscript">comments powered by Disqus.</a></noscript>
    </div>
  </div>
  <% } %>

</main>
